{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/test/test.js",
    "src/app/cases/[id]/page.jsx",
    "src/utils/constants.test.js",
    "src/utils/constants.js",
    "src/components/InventoryFilter.test.jsx",
    "src/app/layout.test.jsx",
    "src/app/cases/page.test.jsx",
    "src/components/Header.test.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
